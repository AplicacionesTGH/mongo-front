                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% marcas.forEach((mar) => {%>
                    <tr>
                        <td><%=mar._id%></td>
                        <td><%=mar.nombre%></td>
                        <td>
                            <!-- <a href="/deleteMarca/<%=mar._id%>" class="btn btn-danger">Eliminar</a> -->
