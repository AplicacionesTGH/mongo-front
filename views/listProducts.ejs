<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Lista de productos</title>
</head>

<body>
    <div class="container">
        <div class="container">
            <a href="/" class="btn btn-light">Volver al inicio</a>
            <a href="/register/product" class="btn btn-success my-3">Crear un Producto</a>
            <a href="/register/products" class="btn btn-success my-3">Crear varios</a>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>CÃ³digo</th>
                    <th>Nombre del Producto</th>
                    <th>Marca</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach((producto) => {%>
                    <tr>
                        <td><%=producto._id%></td>
                        <td><%=producto.nombre%></td>
                        <td><%=producto.idmarca.nombre%></td>
                        <td>
                            <a href="/deleteProducto/<%=producto._id%>" class="btn btn-danger">Eliminar</a>
                            <a href="/editProduct/<%=producto._id%>" class="btn btn-primary">Modificar</a>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>